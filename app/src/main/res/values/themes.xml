<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础主题 -->
    <style name="Theme.AICreator" parent="Base.Theme.AICreator">
        <!-- 主要颜色 - 这里不再重复定义基础主题已有的颜色 -->
        
        <!-- 组件样式 -->
        <item name="materialCardViewStyle">@style/CardView.AICreator</item>
        <item name="textInputStyle">@style/TextInputLayout.AICreator</item>
        <item name="materialButtonStyle">@style/Button.AICreator.Primary</item>
        
        <!-- 文本外观 -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.AICreator.Title</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AICreator.Subtitle</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AICreator.Body</item>
